from telegram import Update, InlineKeyboardButton, InlineKeyboardMarkup
from telegram.ext import ContextTypes

async def open_ticket(update: Update, context: ContextTypes.DEFAULT_TYPE):
    user = update.effective_user
    await update.message.reply_text(
        f"ðŸŽŸ Ticket #{user.id} opened!\nAn admin will contact you in a private group soon."
    )
    # Logic to notify admin at 7960003520 (your ID)
    await context.bot.send_message(
        chat_id="7960003520", 
        text=f"New Ticket from @{user.username}. Use /closeticket {user.id} to end."
    )

async def pay_via_qr(update: Update, context: ContextTypes.DEFAULT_TYPE):
    qr_url = context.bot_data.get('qr_url', 'https://example.com/your_qr.jpg')
    await update.message.reply_photo(
        photo=qr_url,
        caption="Scan this QR to pay. Send screenshot here after payment."
    )
